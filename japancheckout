    <script>
        paypal.Buttons({
            createOrder: function(data, actions) {
                return actions.order.create({
                    purchase_units: [{
                        amount: {
                            value: '2400'
                        }
                    }]
                });
            },
            onApprove: function(data, actions) {
                return actions.order.capture().then(function(details) {
                    alert('支払いが完了しました。 ' + details.payer.name.given_name + 'さん、ありがとうございます！');
                    window.location.href = "ありがとう.html"; // Redireciona para a página de agradecimento
                });
            }
        }).render('#paypal-button-container');
    </script>
